{
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "probot run --webhook-path=/github/events ./dist",
    "test": "jest --coverage --runInBand --forceExit",
    "posttest": "npm run lint",
    "lint": "eslint lib test && tslint lib test",
    "dev": "nodemon --exec npm start",
    "migrate": "sequelize db:migrate",
    "postinstall": "npm run build",
    "heroku-postbuild": "npm prune --production"
  },
  "dependencies": {
    "@slack/client": "^3.14.2",
    "axios": "^0.17.1",
    "body-parser": "^1.17.2",
    "express": "^4.16.2",
    "github": "^13.0.1",
    "html-to-mrkdwn": "github:github-slack/html-to-mrkdwn",
    "jsonwebtoken": "^8.1.0",
    "moment": "^2.18.1",
    "named-regexp": "^0.1.1",
    "pg": "^6.4.2",
    "probot": "github:probot/probot#async-errors",
    "query-string": "^5.0.1",
    "redis": "^2.8.0",
    "request": "^2.83.0",
    "sequelize": "^4.29.0",
    "sequelize-cli": "^3.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.11.0",
    "@types/jest": "^21.1.8",
    "dotenv": "^4.0.0",
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-probot": ">=0.1.0",
    "eslint-import-resolver-typescript": "^1.0.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-typescript": "^0.8.1",
    "expect": "^22.0.3",
    "jest": "^22.0.4",
    "localtunnel": "^1.8.3",
    "nock": "^9.1.0",
    "nodemon": "^1.11.0",
    "snappydoo": "github:github-slack/snappydoo",
    "supertest": "github:bkeepers/supertest#unknown-errors",
    "ts-jest": "^22.0.1",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "typescript-eslint-parser": "^9.0.1"
  },
  "engines": {
    "node": "8.x.x",
    "npm": "5.x.x"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "./test/setup"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "lib/**/*.{js,ts}"
    ],
    "mapCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$"
  },
  "snappydoo": {
    "in": "test/slack/renderer",
    "out": "test/slack/renderer/renders",
    "exclude": [
      "AbstractIssue",
      "Message"
    ]
  }
}
